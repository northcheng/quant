{
	
	"data_source":{
		"time_col": {
			"yahoo": "Date",
			"yfinance": "Date"
		},
		"interval_val":{
			"day": {
				"yahoo": "d",
				"yfinance": "1d"
			},
			"week": {
				"yahoo": "w",
				"yfinance": "1wk"
			},
			"month":{
				"yahoo": "m",
				"yfinance": "1mo"
			}
		}
	},
	
	"calculation": {
		"file_name":{
			"ta_data": "ta_data.pkl",
			"result": "result.pkl",
			"final_result": "final_result.pkl"
		},
		"update_sec_data": true,
		"update_ta_data": true,
		"save_sec_data": true,
		"target_ta_indator": ["ichimoku", "aroon", "bb"],
		"look_back_window": {"day": 250, "week": 1260, "month": 5400}
	},

	"visualization":{
		"create_image": true,
		"show_image": true,
		"save_image": false,
		
		"plot_window": {"day": 125, "week": 630, "month": 2700}, 
		"bar_width": {"day": 0.75, "week": 3.5, "month":16}, 

		"plot_args": {
			"plot_ratio": { 
				"signals": 0.5,
				"ichimoku_kama": 2.5,
				"aroon": 0.75,
				"volume": 0.25
			},
			
			"adx": {
				"target_col": ["adx", "pdi", "mdi"],
				"benchmark": 20
			},
			"aroon":{
			},
			"atr": {
				"target_col": ["atr", "tr"]
			},
			"eom":{
				"target_col": ["eom_diff"],
				"benchmark": 0, 
				"color_mode": "benchmark"
			},
			"ichimoku_kama": { 
				"target_indicator": ["candlestick", "ichimoku"],
				"candlestick_width": 1, 
				"candlestick_color": {"colorup": "green", "colordown": "red", "alpha": 1}
			},
			"kst":{
				"target_col": ["kst_diff"],
				"benchmark": 0, 
				"color_mode": "benchmark"
			},
			"rsi": {
				"target_col": ["rsi"],
				"boundary": [30, 70]
			},
			"signals": {
				"signal_list": ["apf_signal", "aroon_signal", "adx_signal", "ichimoku_signal", "signal"],
				"plot_signal_on_price": true,
				"price_alpha": 0
			},
			"trend_idx":{
				"target_col": ["up_trend_idx", "down_trend_idx", "trend_idx"],
				"benchmark": 0
			},
			"volume": {
				"target_col": "Volume", 
				"color_mode": "up_down",
				"bar_width": 1,
				"alpha": 0.8
			}
		}
	},

	"postprocess":{
		"keep_columns": {
			"symbol":"代码", "Close":"收盘", "rate":"涨跌", "acc_rate":"累计", "obos":"超买超卖", "notes":"备注",
			"break_up":"上穿", "break_down":"下穿", "close_to_kijun":"基准", "close_to_tankan":"转换", 
			"tankan": "阈值I", "ichimoku_day":"ICHI", "signal":"交易信号"
			
		},
		"drop_columns": [],
		"save_result": true,
		"save_data": true,
		"extract_signal_image": true,
		"zip_ta_model_folder": false
	},

	"trade":{
		"init_cash": {
			"simulation_account": 10000, 
			"global_account": 2000, 
			"standard_account": 2000},

		"pool": {
			"simulation_account": "all", 
			"global_account": "auto", 
			"standard_account": "auto"}
	}
}

{
	"data_source":{
		"time_col": {
			"yahoo": "Date",
			"yfinance": "Date",
			"tiger": "time"
		},
		"interval_val":{
			"day": {
				"yahoo": "d",
				"yfinance": "1d",
				"tiger": null
			},
			"week": {
				"yahoo": "w",
				"yfinance": "1wk",
				"tiger": null
			}
		}
	},
	
	"calculation": {
		"file_name":{
			"sec_data": "sec_data.pkl",
			"ta_data": "ta_data.pkl",
			"result": "result.pkl",
			"final_result": "final_result.pkl"
		},
		"update_sec_data": true,
		"update_ta_data": true,
		"target_ta_indator": ["ichimoku", "kama", "kst", "eom"],
		"look_back_window": {"day": 300, "week": 1000}
	},

	"visualization":{
		"create_image": true,
		"show_image": true,
		"save_image": false,
		
		"plot_window": {"day": 150, "week": 500}, 
		"candlestick_width": {"day": 0.75, "week": 3.5}, 

		"plot_args": {
			"plot_ratio": { 
				"signals": 0.5,
				"ichimoku_kama": 3,
				"aroon": 1,
				"volume": 0.5
			},
			"ichimoku_kama": { 
				"candlestick_width": 1, 
				"candlestick_color": {
					"colorup": "green", 
					"colordown": "red", 
					"alpha": 1
				}
			},
			"ichimoku": { 
				"candlestick_width": 1, 
				"candlestick_color": {
					"colorup": "green", 
					"colordown": "red", 
					"alpha": 1
				}
			},
			"kama": { 
				"candlestick_width": 1, 
				"candlestick_color": {
					"colorup": "green", 
					"colordown": "red", 
					"alpha": 1
				}
			},
			"aroon":{
				"target_col": ["aroon_up", "aroon_down"],
				"benchmark": 50,
				"boundary": [20, 80]
			},
			"adx": {
				"target_col": ["pdi", "mdi", "adx"],
				"benchmark": 25,
				"color_mode": "benchmark"
			},
			"signals": {
				"signal_list": ["kama_signal", "ichimoku_signal", "aroon_signal", "signal"],
				"plot_signal_on_price": true,
				"price_alpha": 0
			},
			"obv": {
				"target_col": ["cci_ma_3"], 
				"benchmark": 0,
				"color_mode": "up_down"
			},
			"volume": {
				"target_col": ["Volume"], 
				"color_mode": "up_down"
			}
		}
	},

	"postprocess":{
		"keep_columns": {
			"sec_code":"代码", "Close":"收盘", "rate":"涨跌", "acc_rate":"累计", "notes":"备注",
			"break_up":"上穿", "break_down":"下穿", "close_to_kijun":"基准", "close_to_tankan":"转换", 
			"close_to_kama_fast":"快线", "close_to_kama_slow":"慢线", "kama_fast": "阈值K", "tankan": "阈值I",
			"kama_day":"KAMA", "ichimoku_day":"ICHI", "signal":"交易信号"
			
		},
		"drop_columns": [],
		"save_result": true,
		"save_data": true,
		"extract_signal_image": true,
		"zip_ta_model_folder": true
	}
}

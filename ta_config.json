{
	"data_source":{
		"yahoo": {
			"time_col": "Date",
			"interval": {"day": "d", "week": "w", "month": "m"}
		},
		"yfinance": {
			"time_col": "Date",
			"interval": {"day": "1d", "week": "1wk", "month": "1mo"}
		},
		"tiger": {
			"time_col": "time",
			"interval": {"day": null, "week": null, "month": null}
		}
	},
	
	"calculation": {
		"update_sec_data": true,
		"update_ta_data": true,
		"target_ta_indator": ["ichimoku", "kama", "kst", "eom"],
		"look_back_window": {"day": 300, "week": 1000}
	},

	"visualization":{
		"create_image": true,
		"show_image": false,
		"save_image": true,
		
		"plot_window": {"day": 90, "week": 500}, 
		"candlestick_width": {"day": 0.75, "week": 3.5}, 

		"plot_args": {
			"plot_ratio": { 
				"ichimoku_kama": 3, 
				"signal_index": 0.75,
				"signals": 0.75,
				"volume": 0.5
			},
			"ichimoku_kama": { 
				"candlestick_width": 1, 
				"candlestick_color": {
					"colorup": "green", 
					"colordown": "red", 
					"alpha": 1
				}
			},
			"signals": {
				"signal_list": ["eom_signal", "kst_signal", "aroon_signal", "adx_signal", "ao_signal", "kama_signal", "ichimoku_signal", "signal"],
				"plot_signal_on_price": true,
				"price_alpha": 0
			},
			"signal_index":{
				"signal_idx_col": "prev_si_ma",
				"pos_signal_idx_col": "prev_psi_ma",
				"neg_signal_idx_col": "prev_nsi_ma"
			},
			"volume": {
				"target_col": ["Volume"], 
				"color_mode": "up_down"
			}
		}
	},

	"postprocess":{
		"keep_columns": {
			"sec_code":"代码", "Close":"收盘", "rate":"涨跌", "acc_rate":"累计", "notes":"备注",
			"break_up":"上穿", "break_down":"下穿", "close_to_kijun":"基准", "close_to_tankan":"转换", 
			"close_to_kama_fast":"快线", "close_to_kama_slow":"慢线", "kama_fast": "阈值K", "tankan": "阈值I",
			"kama_day":"KAMA", "ichimoku_day":"ICHI", "ao_day":"AO", "adx_day":"ADX", "aroon_day":"AROON", "eom_day":"EOM", "kst_day":"KST", 
			"si":"信号值","psi":"正信号", "nsi":"负信号", "signal":"交易信号"
		},
		"drop_columns": [],
		"save_result": true,
		"extract_signal_image": true,
		"zip_ta_model_folder": true
	}
}
